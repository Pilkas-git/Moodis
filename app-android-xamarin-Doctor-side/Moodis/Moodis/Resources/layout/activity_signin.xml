
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_animation"
    android:id="@+id/constraintLayoutSingIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/circular_progress_bar"
        android:id="@+id/progressBarSignIn"
        android:layout_width="@dimen/grid_unit_0x"
        android:layout_height="@dimen/grid_unit_0x"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_margin="@dimen/grid_unit_4x"
        android:textSize="@dimen/login_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/header_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_lower"
        android:layout_margin="@dimen/grid_unit_4x"
        android:textSize="@dimen/abc_text_size_small_material"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
  
     <EditText
        android:id="@+id/usernameInput"
        android:layout_width="@dimen/grid_unit_0x"
        android:layout_height="@dimen/grid_unit_20x"
        android:paddingLeft="@dimen/grid_unit_5x"
        android:layout_marginTop="@dimen/grid_unit_30x"
        android:layout_marginLeft="@dimen/grid_unit_8x"
        android:layout_marginRight="@dimen/grid_unit_8x"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/username_icon"
    />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="@dimen/grid_unit_0x"
        android:layout_height="@dimen/grid_unit_20x"
        android:paddingLeft="@dimen/grid_unit_5x"
        android:layout_margin="@dimen/grid_unit_8x"
        android:maxLines="1"
        android:inputType="textWebPassword"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/usernameInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/password_icon"
    />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_unit_4x"
        android:text="@string/signin_button_text"
        android:minWidth="@dimen/grid_unit_82x"
        android:minHeight="@dimen/grid_unit_20x"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_round"
    />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_unit_12x"
        android:text="@string/signin_register_button_text"
        android:minWidth="@dimen/grid_unit_82x"
        android:minHeight="@dimen/grid_unit_20x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_round" 
    />

    <ImageButton
        android:id="@+id/deleteEverythingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_unit_4x"
        android:src="@drawable/baseline_delete_forever_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>