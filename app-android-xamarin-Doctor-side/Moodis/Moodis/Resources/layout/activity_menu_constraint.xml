 
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuActivity"
        android:background="@drawable/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <android.support.v7.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="@dimen/grid_unit_0x"
        android:layout_marginTop="@dimen/grid_unit_30x"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#50000000"/>
        <Button
        android:id="@+id/AddToGroup"
        android:layout_width="@dimen/grid_unit_100x"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_unit_5x"
        android:layout_marginLeft="@dimen/grid_unit_5x"
        android:layout_marginTop="@dimen/grid_unit_52x"
        android:layout_marginEnd="@dimen/grid_unit_15x"
        android:layout_marginRight="@dimen/grid_unit_15x"
        android:text="@string/add_to_group_menu"
        app:layout_constraintEnd_toStartOf="@+id/userRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:minHeight="@dimen/grid_unit_24x"/>

    <Button
        android:id="@+id/CheckGroupHistory"
        android:layout_width="@dimen/grid_unit_100x"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_unit_5x"
        android:layout_marginLeft="@dimen/grid_unit_5x"
        android:layout_marginTop="@dimen/grid_unit_40x"
        android:layout_marginEnd="@dimen/grid_unit_15x"
        android:layout_marginRight="@dimen/grid_unit_15x"
        android:text="@string/group_emotion_history_menu"
        app:layout_constraintEnd_toStartOf="@+id/userRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddToGroup"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:minHeight="@dimen/grid_unit_24x"/>

    <Button
        android:id="@+id/CheckPersonHistory"
        android:layout_width="@dimen/grid_unit_100x"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_unit_5x"
        android:layout_marginLeft="@dimen/grid_unit_5x"
        android:layout_marginTop="@dimen/grid_unit_40x"
        android:layout_marginEnd="@dimen/grid_unit_15x"
        android:layout_marginRight="@dimen/grid_unit_15x"
        android:text="@string/check_person_history"
        app:layout_constraintEnd_toStartOf="@+id/userRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckGroupHistory" 
        android:textStyle="bold"
        android:textAllCaps="true"
        android:minHeight="@dimen/grid_unit_24x"/>

    <Button
        android:id="@+id/DisplayYourGroupMembersButton"
        android:layout_width="@dimen/grid_unit_100x"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_unit_5x"
        android:layout_marginLeft="@dimen/grid_unit_5x"
        android:layout_marginTop="@dimen/grid_unit_40x"
        android:layout_marginEnd="@dimen/grid_unit_15x"
        android:layout_marginRight="@dimen/grid_unit_15x"
        android:text="@string/your_group_users"
        app:layout_constraintEnd_toStartOf="@+id/userRecyclerView"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckPersonHistory"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:minHeight="@dimen/grid_unit_24x"/>
</android.support.constraint.ConstraintLayout>