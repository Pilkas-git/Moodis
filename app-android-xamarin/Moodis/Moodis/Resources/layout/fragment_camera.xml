
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/grid_unit_12x"
    android:minHeight="@dimen/grid_unit_12x">
    
    <include
        layout="@layout/circular_progress_bar"
        android:id="@+id/progressBarCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>

  <Button
      android:id="@+id/takePictureButton"
      android:text="@string/picture_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_unit_36x"
      android:gravity="center"
      android:background="@drawable/button_round"
      android:layout_alignParentBottom="true" />
</RelativeLayout>