<?xml version="1.0" encoding="utf-8" ?> 
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <ImageView
        android:id="@+id/imageForView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_unit_0x"
        android:layout_marginTop="@dimen/grid_unit_23x"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/highestEmotionLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/highestEmotionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_unit_16x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="placeholder" />

    </android.support.constraint.ConstraintLayout>