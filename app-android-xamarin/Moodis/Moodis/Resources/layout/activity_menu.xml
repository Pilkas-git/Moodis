
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fitsSystemWindows="true"
                                        tools:openDrawer="start">

 

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
        <ImageView
            android:id="@+id/imageForView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_unit_0x"
            android:layout_marginTop="@dimen/grid_unit_23x"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/lblAnger"
            app:layout_constraintEnd_toEndOf="@id/lblAnger"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>
    
        <TextView
            android:id="@+id/lblAnger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_unit_8x"
            android:layout_marginLeft="@dimen/grid_unit_8x"
            android:layout_marginTop="@dimen/grid_unit_2x"
            android:layout_marginEnd="@dimen/grid_unit_56x"
            android:layout_marginRight="@dimen/grid_unit_56x"
            tools:text="placeholder"
            app:layout_constraintEnd_toStartOf="@id/lblSadness"
            app:layout_constraintHorizontal_bias="@dimen/gravity_unit_0x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblFear" />

        <TextView
            android:id="@+id/lblContempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_unit_8x"
            android:layout_marginLeft="@dimen/grid_unit_8x"
            android:layout_marginEnd="@dimen/grid_unit_56x"
            android:layout_marginRight="@dimen/grid_unit_56x"
            tools:text="placeholder"
            app:layout_constraintEnd_toStartOf="@id/lblNeutral"
            app:layout_constraintHorizontal_bias="@dimen/gravity_unit_0x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblSurprise" />

        <TextView
            android:id="@+id/lblDisgust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/grid_unit_8x"
            android:layout_marginRight="@dimen/grid_unit_8x"
            tools:text="placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblSadness" />

        <TextView
            android:id="@+id/lblFear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_unit_8x"
            android:layout_marginLeft="@dimen/grid_unit_8x"
            android:layout_marginEnd="@dimen/grid_unit_56x"
            android:layout_marginRight="@dimen/grid_unit_56x"
            tools:text="placeholder"
            app:layout_constraintEnd_toStartOf="@id/lblDisgust"
            app:layout_constraintHorizontal_bias="@dimen/gravity_unit_0x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblContempt" />

        <TextView
            android:id="@+id/lblHappiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_unit_3x"
            android:layout_marginEnd="@dimen/grid_unit_8x"
            android:layout_marginRight="@dimen/grid_unit_8x"
            tools:text="placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lblNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_unit_9x"
            android:layout_marginEnd="@dimen/grid_unit_8x"
            android:layout_marginRight="@dimen/grid_unit_8x"
            tools:text="placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblHappiness" />

        <TextView
            android:id="@+id/lblSadness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_unit_3x"
            android:layout_marginEnd="@dimen/grid_unit_8x"
            android:layout_marginRight="@dimen/grid_unit_8x"
            tools:text="placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lblNeutral" />

        <TextView
            android:id="@+id/lblSurprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_unit_8x"
            android:layout_marginLeft="@dimen/grid_unit_8x"
            android:layout_marginEnd="@dimen/grid_unit_56x"
            android:layout_marginRight="@dimen/grid_unit_56x"
            tools:text="placeholder"
            app:layout_constraintEnd_toStartOf="@id/lblContempt"
            app:layout_constraintHorizontal_bias="@dimen/gravity_unit_0x"
            app:layout_constraintStart_toStartOf="parent"  />

    </android.support.constraint.ConstraintLayout>
    
<include
    layout="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>